<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <ImageButton
        android:id="@+id/toNotifications"
        app:srcCompat="@drawable/ic_action_notification"
        android:background="@color/black"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toSettings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/toSearch"
        app:srcCompat="@drawable/ic_action_search"
        android:background="@color/black"
        android:layout_width="70dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toSettings"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/toHome"
        android:background="@color/black"
        app:srcCompat="@drawable/ic_action_home"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="start|center_horizontal|top"
        app:icon="@drawable/ic_action_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/toCategorie"
        android:layout_width="176dp"
        android:layout_height="64dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="84dp"
        android:text="Categorie"
        android:textStyle="bold"
        app:icon="@drawable/ic_action_categorie"
        app:layout_constraintBottom_toTopOf="@+id/creaEvento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/creaEvento"
        android:layout_width="179dp"
        android:layout_height="81dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="137dp"
        android:text="CREA EVENTO"
        android:textStyle="bold"
        app:icon="@drawable/ic_action_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toCategorie" />

    <ImageButton
        android:id="@+id/immagine"
        android:layout_width="232dp"
        android:layout_height="244dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creaEvento"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/toCalendario"
        android:layout_width="173dp"
        android:layout_height="53dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="69dp"
        android:text="Calendario"
        app:icon="@drawable/ic_action_calendario"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toCategorie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/toSettings"
        app:srcCompat="@drawable/ic_action_settings"
        android:background="@color/black"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>